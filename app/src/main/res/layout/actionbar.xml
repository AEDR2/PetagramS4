<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/miActionBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/primary"
    android:elevation="@dimen/elevationActionBar"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    >

    <ImageView
        android:id="@+id/ivPaw"
        android:layout_width="30dp"
        android:layout_height="@dimen/tamanoHueso"
        android:src="@mipmap/paw"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name2"
        android:textAlignment="center"
        android:textSize="@dimen/letraTitulo" />

   <ImageButton
       android:id="@+id/ivEstrellasa"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/estrella"
        android:text="@string/cinco"/>

</android.support.v7.widget.Toolbar>